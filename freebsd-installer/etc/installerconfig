PARTITIONS=ada0
DISTRIBUTIONS="kernel.txz base.txz"

#!/bin/sh

echo "ifconfig_em0=DHCP" >> /etc/rc.conf
echo "ntpd_enable=YES"   >> /etc/rc.conf
echo "sshd_enable=YES"   >> /etc/rc.conf

export ASSUME_ALWAYS_YES="yes"

dhclient em0
pkg update && \
pkg upgrade && \
pkg install ansible git && \
/usr/local/bin/ansible-pull -e "ansible_python_interpreter=python2.7" -U https://github.com/duckinator/system-config.git freebsd-desktop.yml && \
echo && echo "Rebooting." && shutdown -r "+5s" && sleep 5
